                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <configuration>
                            <port>9090</port>
                            <path>/rms</path>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start-tomcat</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
